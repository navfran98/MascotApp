<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/select_text_view"
        android:layout_width="206dp"
        android:layout_height="26dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Show:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/breeder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="5dp"
        android:text="Breeder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_button" />

    <CheckBox
        android:id="@+id/groomer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Groomer"
        app:layout_constraintStart_toStartOf="@+id/breeder_button"
        app:layout_constraintTop_toBottomOf="@+id/breeder_button" />

    <CheckBox
        android:id="@+id/walker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Walker"
        app:layout_constraintStart_toStartOf="@+id/groomer_button"
        app:layout_constraintTop_toBottomOf="@+id/groomer_button" />

    <CheckBox
        android:id="@+id/vet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Vet"
        app:layout_constraintStart_toStartOf="@+id/walker_button"
        app:layout_constraintTop_toBottomOf="@+id/walker_button" />

    <CheckBox
        android:id="@+id/pet_shop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Pet Shop"
        app:layout_constraintStart_toStartOf="@+id/vet_button"
        app:layout_constraintTop_toBottomOf="@+id/vet_button" />

    <CheckBox
        android:id="@+id/sitter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Sitter"
        app:layout_constraintStart_toStartOf="@+id/pet_shop_button"
        app:layout_constraintTop_toBottomOf="@+id/pet_shop_button" />

    <CheckBox
        android:id="@+id/shelter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Shelter"
        app:layout_constraintStart_toStartOf="@+id/sitter_button"
        app:layout_constraintTop_toBottomOf="@+id/sitter_button" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#FF9800"
        android:paddingHorizontal="30dp"
        android:text="Filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shelter_button" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:text="Close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_button" />

    <CheckBox
        android:id="@+id/all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="All"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_text_view" />


</androidx.constraintlayout.widget.ConstraintLayout>